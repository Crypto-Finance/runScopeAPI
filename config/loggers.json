{
    "appenders": {
      "debug": {
        "type": "file",
        "filename": "log/debug.log",
        "maxLogSize": 10485760,
        "numBackups": 3
      },
      "console": 
        { "type": "stdout" },
      "errorFile": {
        "type": "file",
        "filename": "log/errors.log"
      },
      "errors": {
        "type": "logLevelFilter",
        "level": "ERROR",
        "appender": "errorFile"
      }
    },
    "categories": {
      "default": { "appenders": [ "debug", "errors", "console" ], "level": "DEBUG" }
    }
  }